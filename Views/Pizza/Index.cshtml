@model List<Pizza>;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_MyLayout";
}


<div class="text-center m-auto w-50">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Immagine</th>
                <th scope="col">Prezzo</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.Count > 0){
                @foreach (Pizza pizza in Model)
                {

                    <tr>
                        <th scope="row"> <a href="@Url.Action("SinglePizza","Pizza",new {id = pizza.Id})">@pizza.Name </a></th>
                        <td>@pizza.Description</td>
                        <td><img width="100px" src="@pizza.Image" /></td>
                        <td>@pizza.Price €</td>
                    </tr>

                }
            } else{
                <tr>
                    Non ci sono pizze disponibili al momento! Ti tocca mangiare Tonno in scatola XD
                </tr>
            }
            
        </tbody>
    </table>
</div>



@section FooterSection{
    <footer class="border-top footer text-white d-flex align-items-center">
        <div class="container ">
            &copy; 2022 - Pizzeria da Davide - <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
}
